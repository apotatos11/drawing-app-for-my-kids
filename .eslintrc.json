{
  "plugins": ["prettier", "react"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "ignorePatterns": ["node_modules/"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": 0
  }
}
